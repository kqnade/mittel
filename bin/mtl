#!/usr/bin/env bash

# --------- Main ---------

main() {
  # if $1 arg has - or --
  if [[ "$1" == "-"* || "$1" == "--"* ]]; then
    # -v or --version
    if [[ "$1" == "-v" || "$1" == "--version" ]]; then
      echo "mtl version $MTL_VERSION"
      exit 0
    fi
    # -h or --help
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
      # shift 1 arg
      shift 1
      # run help
      help "$@"
      exit 0
    fi
  fi
  # run command
  run_command "$@"
  # exit
  exit 0
}

# --------- Run ---------

# run main
main "$@"